<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        ></include>

    <TextView
        android:id="@+id/quiz_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiz 1"
        android:textSize="30dp"
        android:textColor="@color/black"
        app:layout_constraintVertical_bias="0.15"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
         />

    <ImageView
        android:id="@+id/white_bg"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/white_bg"
        app:layout_constraintVertical_bias="0.20"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="70dp"
        android:textColor="#010101"
        android:text="座"
        android:fontFamily="sans-serif"
        app:layout_constraintVertical_bias="0.26"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/pronunciation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="Zuò"
        android:fontFamily="sans-serif"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
    android:id="@+id/choice_answer1"
    android:layout_width="300dp"
    android:layout_height="40dp"
    android:textSize="30dp"
    android:text="좌석"
    android:textColor="@color/black"
    android:background="@drawable/green_btn"
    app:layout_constraintVertical_bias="0.52"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/choice_answer2"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textSize="30dp"
        android:text="열"
        android:textColor="@color/black"
        android:background="@drawable/green_btn"
        app:layout_constraintVertical_bias="0.62"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/choice_answer3"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textSize="30dp"
        android:text="당신"
        android:textColor="@color/black"
        android:background="@drawable/green_btn"
        app:layout_constraintVertical_bias="0.72"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/choice_answer4"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textSize="30dp"
        android:text="~의"
        android:textColor="@color/black"
        android:background="@drawable/green_btn"
        app:layout_constraintVertical_bias="0.82"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1/20"
        android:textSize="30dp"
        android:textColor="@color/black"
        app:layout_constraintVertical_bias="0.92"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />


</android.support.constraint.ConstraintLayout>